{% extends 'base.html.twig' %}

{% set navType = 'default' %}

{% block title %}Survey index{% endblock %}

{% block body %}
    <h1>Survey index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Route</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for survey in surveys %}
            <tr>
                <td>{{ survey.id }}</td>
                <td>{{ survey.route }}</td>
                <td>{{ survey.name }}</td>
                <td>{{ survey.description }}</td>
                <td>
                    <a href="{{ path('survey_show', {'id': survey.id}) }}">show</a>
                    <a href="{{ path('survey_edit', {'id': survey.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('survey_new') }}">Create new</a>
{% endblock %}
