{% extends 'base.html.twig' %}

{% set navType = 'default' %}

{% block title %}Contactform index{% endblock %}

{% block body %}
    <h1>Contactform index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contactform in contactforms %}
            <tr>
                <td>{{ contactform.id }}</td>
                <td>{{ contactform.name }}</td>
                <td>{{ contactform.email }}</td>
                <td>{{ contactform.message }}</td>
                <td>
                    <a href="{{ path('contactform_show', {'id': contactform.id}) }}">show</a>
                    <a href="{{ path('contactform_edit', {'id': contactform.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contactform_new') }}">Create new</a>
{% endblock %}
