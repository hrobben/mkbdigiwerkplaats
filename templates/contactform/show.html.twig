{% extends 'base.html.twig' %}

{% set navType = 'default' %}

{% block title %}Contactform{% endblock %}

{% block body %}
    <h1>Contactform</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contactform.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contactform.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contactform.email }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contactform.message }}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{{ contactform.datetime|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('contactform_index') }}">back to list</a>

    <a href="{{ path('contactform_edit', {'id': contactform.id}) }}">edit</a>

    {{ include('contactform/_delete_form.html.twig') }}
{% endblock %}
